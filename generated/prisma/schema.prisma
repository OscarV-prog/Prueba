generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String @map("created_by_id")

  @@index([name])
  @@map("posts")
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String  @map("user_id")
  type                     String
  provider                 String
  providerAccountId        String  @map("provider_account_id")
  refresh_token            String? @map("refresh_token")
  access_token             String? @map("access_token")
  expires_at               Int?    @map("expires_at")
  token_type               String? @map("token_type")
  scope                    String?
  id_token                 String? @map("id_token")
  session_state            String? @map("session_state")
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?    @map("refresh_token_expires_in")

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id                   String                @id @default(cuid())
  name                 String?
  email                String?               @unique
  emailVerified        DateTime?             @map("email_verified")
  image                String?
  password             String? // Hashed password for Credentials provider
  activeWorkspaceId    String?               @map("active_workspace_id")
  accounts             Account[]
  sessions             Session[]
  posts                Post[]
  workspaces           UserWorkspace[]
  sentInvitations      Invitation[]
  assignedTasks        Task[]                @relation("AssignedTasks")
  createdTasks         Task[]                @relation("CreatedTasks")
  comments             Comment[]
  activityLogs         ActivityLog[]
  notificationSettings NotificationSettings?
  notifications        Notification[]

  @@map("users")
}

model Workspace {
  id              String          @id @default(cuid())
  name            String
  tierId          String          @default("FREE") @map("tier_id")
  slackWebhookUrl String?         @map("slack_webhook_url")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")
  users           UserWorkspace[]
  invitations     Invitation[]
  tasks           Task[]
  activityLogs    ActivityLog[]
  tags            Tag[]

  @@map("workspaces")
}

model UserWorkspace {
  userId      String    @map("user_id")
  workspaceId String    @map("workspace_id")
  role        String    @default("MEMBER") // ADMIN, MEMBER
  createdAt   DateTime  @default(now()) @map("created_at")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@id([userId, workspaceId])
  @@map("user_workspaces")
}

model Invitation {
  id              String    @id @default(cuid())
  workspaceId     String    @map("workspace_id")
  email           String
  role            String    @default("MEMBER")
  token           String    @unique
  invitedByUserId String    @map("invited_by_user_id")
  status          String    @default("PENDING") // PENDING, ACCEPTED, REVOKED
  expiresAt       DateTime  @map("expires_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy       User      @relation(fields: [invitedByUserId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, email, status])
  @@map("invitations")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Task {
  id           String    @id @default(cuid())
  title        String
  description  String?
  priority     String    @default("MEDIUM") // LOW, MEDIUM, HIGH
  status       String    @default("TODO") // TODO, IN_PROGRESS, DONE, BACKLOG
  dueDate      DateTime? @map("due_date")
  displayOrder String    @default("0") @map("display_order")

  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  assigneeId String? @map("assignee_id")
  assignee   User?   @relation("AssignedTasks", fields: [assigneeId], references: [id], onDelete: SetNull)

  createdById String @map("created_by_id")
  creator     User   @relation("CreatedTasks", fields: [createdById], references: [id], onDelete: Cascade)

  comments Comment[]
  tags     TaskTag[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([workspaceId])
  @@index([assigneeId])
  @@index([workspaceId, status])
  @@index([workspaceId, assigneeId])
  @@index([workspaceId, dueDate])
  @@index([workspaceId, displayOrder])
  @@map("tasks")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String   @map("task_id")
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([taskId])
  @@map("comments")
}

model Tag {
  id          String    @id @default(cuid())
  name        String
  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  tasks       TaskTag[]

  @@unique([workspaceId, name])
  @@map("tags")
}

model TaskTag {
  taskId String @map("task_id")
  tagId  String @map("tag_id")
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([taskId, tagId])
  @@map("task_tags")
}

model ActivityLog {
  id          String    @id @default(cuid())
  workspaceId String    @map("workspace_id")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionType  String    @map("action_type") // TASK_CREATED, TASK_COMPLETED, etc.
  entityType  String    @map("entity_type") // TASK, USER, etc.
  entityId    String    @map("entity_id")
  metadata    Json? // Storing audit details
  createdAt   DateTime  @default(now()) @map("created_at")

  @@index([workspaceId, createdAt])
  @@map("activity_logs")
}

model NotificationSettings {
  userId       String  @id @map("user_id")
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailEnabled Boolean @default(true) @map("email_enabled")
  slackEnabled Boolean @default(false) @map("slack_enabled")

  @@map("notification_settings")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String // INFO, WARNING, SUCCESS, ERROR
  read      Boolean  @default(false)
  link      String? // Actionable link
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId, createdAt])
  @@map("notifications")
}
